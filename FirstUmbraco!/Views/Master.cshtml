	<body class="landing">

	
@if (Umbraco.MemberIsLoggedOn())
{
  	<!-- Header -->
		<header id="header" class="alt">
			<h1><a href="/">Codic Education</a></h1>
			<a href="#nav">Menu</a>
		</header>
		
		<!-- Nav -->
			<nav id="nav">
				<ul class="links">
					<li><a href="/">Home</a></li>
					<li><a href="/Course">Courses</a></li>
					<li><a href="/Contact-Us">Contact Us</a></li>
				</ul>
     
    @using (Html.BeginUmbracoForm("SubmitLogout", "member", FormMethod.Post, new { id = "logout" }))
    {
        Html.AntiForgeryToken();
        var myUser = Membership.GetUser();
        if (myUser != null)
        {
        @:<div>
            @:<p><strong>Logged in as</strong> <span>@myUser.UserName</span></p>
            @:<button name="login" type="submit"><span>logout</span> <i class="fa fa-arrow-right"></i></button>
        @:</div>
        }
    }
    </nav>
}
    else 
    {
    
    <!-- Header -->
		<header id="header" class="alt">
			<h1><a href="/">Codic Education</a></h1>
			<a href="#nav">Menu</a>
		</header>
		
		<!-- Nav -->
			<nav id="nav">
				<ul class="links">
				    <li><a href="/">Home</a></li>
					<li><a href="/Course">Courses</a></li>
					<li><a href="/Contact-Us">Contact Us</a></li>
					<li><a href="/Login">Log In</a></li>
					<li><a href="/Register">Register</a></li>
				</ul>
				@using (Html.BeginUmbracoForm("SubmitLogout", "member", FormMethod.Post, new { id = "logout" }))
    {
        Html.AntiForgeryToken();
        var myUser = Membership.GetUser();
        if (myUser != null)
        {
        @:<div>
            @:<p><strong>Logged in as</strong> <span>@myUser.UserName</span></p>
            @:<button name="login" type="submit"><span>logout</span> <i class="fa fa-arrow-right"></i></button>
        @:</div>
        }
    }
    </nav>
}
			
